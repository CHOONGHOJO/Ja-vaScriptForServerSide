doctype html
html
  head
    meta(charset='utf-8')
  body
    h1 
        a(href='/topic') SServer Side JavaScript
    ul 
      each topic in topics 
        li
          - rid = encodeURIComponent(topic['@rid'])
          a(href='/topic/'+topic[@rid])= topic.title
    artcle
      - rid = encodeURIComponent(topic['@rid'])
      form(action= '/topic/'+rid+'/edit' method='post')
        p
          input(type='text' name='title' placeholder='제목' value=topic.title)
        p
          textarea(name="description" placeholder='설명')
            =topic.description)
        p
          input(type='text' name='autor' placeholder='저자' value=author)
        p
          input(type='submit')
